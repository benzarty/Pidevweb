{% block body %}
    <section class="blog py-5" id="blog">
        <div class="container py-xl-5 py-lg-3">
            <div class="row">


                {% for evenement in evenements %}

                    <!-- blog grid -->
                    <div class="col-lg-4 col-md-6 px-2 mt-sm-0 mt-4">
                        <div class="card">
                            <div class="card-header p-0 position-relative">
                                <a href="#">
                                    <img class="card-img-bottom" src="{{ asset('uploads/' ~ evenement.image )}}" alt="Card image cap">
                                    <span class="fa fa-user post-icon" aria-hidden="true"></span>
                                </a>
                            </div>
                            <div class="card-body">
                                <h6 class="text-colors let-spa mb-3">{{ evenement.dateEvenement ? evenement.dateEvenement|date('d-m-Y') : '' }}</h6>
                                <h5 class="blog-title card-title font-weight-bold">
                                    <a href="#" class="text-bl">{{ evenement.theme }}</a>
                                </h5>
                                <div class="row mt-5">
                                    <div class="col-3 testi-img-res px-2">
                                        <img src="{{ evenement.image }}" alt=" " class="img-fluid rounded-circle" />
                                    </div>
                                    <div class="col-9 w3_testi_grid mt-xl-2 mt-lg-0 mt-md-2 mt-4">
                                        <h5 class="text-colors mb-1">{{ evenement.presentateur }}</h5>
                                        <p><a href="{{ evenement.lien }}" target="_blank">Participer</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- //blog grid -->
                {% endfor %}


            </div>

        </div>

    </section>

{% endblock %}