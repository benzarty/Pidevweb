{% block form %}<form class="form-inline" action="{{ path('promotion_promo')}} " method="GET">
        <div class="input-group input-group-sm">
            <input class="form-control form-control-navbar" name="promo" type="search" placeholder="Search" aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-navbar" type="submit">
                    <i class="fas fa-search"></i>
