{% block central %}


    <h1 style="text-align: center;"><span style="color: #ffffff;"><strong>GESTIONS DES PROMOTIONS </strong></span></h1>

    <div class="content-header">

        <table id="articles" class="table  table-bordered table-hover table-dark   ">

            <thead>
            <tr>
                <th>Id</th>
                <th>Promotion</th>
                <th>Raison</th>
                <th>Date</th>
                <th>Apprenant</th>
                <th>Professeur</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>



            {% for promotion in promotions %}
                <tr>
                    <td>{{ promotion.id_promotion }}</td>
                    <td>{{ promotion.promotion }}</td>
                    <td>{{ promotion.raison_promotion }}</td>
                    <td>{{ promotion.date_promotion ? promotion.date_promotion|date('Y-m-d') : '' }}</td>
                    <td>{{ promotion.nomAp ~' '~ promotion.prenomAp}}</td>
                    <td>{{ promotion.nom ~' '~ promotion.prenom}}</td>

                    <td>
                        <a href="{{ path('promotion_show', {'idPromotion': promotion.id_promotion}) }}" class="btn btn-secondary">Voir</a>
                        <a href="{{ path('promotion_edit', {'idPromotion': promotion.id_promotion}) }}" class = "btn btn-info" >Editer</a>
                        <a href="{{ path('promotion_delete', {'idPromotion': promotion.id_promotion}) }}" class="btn btn-danger"
                           onclick="return confirm('Voulez vous supprimer cet Evenement ?');">Sup</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>


    </div>


    <a href="{{ path('promotion_new') }}">Create new</a>
{% endblock %}
