{% extends 'base.html.twig' %}
{% block body %}
<div class="content-wrapper"><br><br>
    <div class="content-header">
        <h1 style="text-align: center;"><span style="color: #ffffff;"><strong>GESTIONS DES RECLAMATIONS</strong></span></h1><br>
        <div><a href="/Reclamation/new" type="button"  ><i class="fas fa-plus-circle fa-2x"></i> </a></div>
        {% if articles %}
            <table id="articles" class="table  table-bordered table-hover table-dark   ">
                <thead>
                <tr>
                    <th>Id Reclamation</th>
                    <th>Title</th>
                    <th>Etat </th>
                    <th>Reclamation</th>
                    <th>Action</th>

                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.id }}</td>
                        <td>{{ article.title }}</td>
                        <td>{{ article.etat }}</td>
                        <td>{{ article.recl}}</td>
                        <td>
                            <a href="/Reclamation/edit/{{ article.id }}" class="btn btn-info">Modifier</a>
                            <a href="/Reclamation/delete/{{ article.id }}" class="btn btn-danger"
                               onclick="return confirm('Etes-vous sÃ»r de supprimer cet article?');">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucun articles</p>
        {% endif %}

    </div>
    <!-- /.content-header -->

    <!-- Main content -->

    <!-- /.content -->
</div>

{% endblock %}